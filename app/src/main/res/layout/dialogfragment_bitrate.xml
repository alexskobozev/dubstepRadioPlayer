<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/choose_bitrate"
        android:textSize="18sp"
        android:padding="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_bitrate_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/b24kbps"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_bitrate_64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/b64kbps"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_bitrate_128"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/b128kbps"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_bitrate_256"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/b256kbps"
        android:textSize="18sp" />

</LinearLayout>